<div class="col-lg-12">
<form  {{action 'saveProject' on='submit'}}>
	<div class="form-group">
		<label>Title</label>
		{{input value=project.title class="form-control"}}
	</div>
	<div class="form-group">
		<label>Created By</label>
		{{input value=project.created_by class="form-control"}}
	</div>
	<div class="form-check">
		{{input type="checkbox" checked=project.status  class="form-check-input"}}
		<label class="form-check-label">Status</label>
	</div>
   <div class="form-grou">
   	<button class="btn btn-primary">Save</button>
   </div>
</form>
</div>
