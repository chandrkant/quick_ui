<div class="col-lg-12">
<form>
	<div class="form-grop">
		<label>Title</label>
		{{input value=model.title class="form-controll"}}
	</div>
	<div class="form-grop">
		<label>Created By</label>
		{{input value=model.created_by class="form-controll"}}
	</div>
	<div class="form-grop">
		<label>Status</label>
		{{input type="checkbox" checked=model.status class="form-controll"}}
	</div>
   <div class="form-group">
   	<button class="btn btn-primary" {{action 'saveProject' model}} >Save</button>
   </div>
</form>
</div>